<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.RankingActivity">

    <TextView
        android:id="@+id/teamRankingTV"
        android:text="Team Ranking"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:gravity="start|center"
        android:fontFamily="@font/cantata_one"
        android:drawableStart="@drawable/rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/playerRankingTV"
        android:text="Player Ranking"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:gravity="start|center"
        android:fontFamily="@font/cantata_one"
        android:drawableStart="@drawable/rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/umpireRankingTV"
        android:text="Umpire Ranking"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:gravity="start|center"
        android:fontFamily="@font/cantata_one"
        android:drawableStart="@drawable/rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>