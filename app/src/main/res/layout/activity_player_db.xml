<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.dashboards.PlayerDBActivity">

    <LinearLayout
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/news_text_bg"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/amiko"
            android:textSize="15sp"
            android:id="@+id/profile"
            android:textStyle="bold"
            android:text="Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="@drawable/news_text_bg"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/amiko"
            android:textSize="15sp"
            android:id="@+id/request"
            android:text="Request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/playerInfoLayout"
        android:visibility="visible"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_alignParentEnd="true"
            android:src="@drawable/dummy_image"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <LinearLayout
            android:layout_toStartOf="@id/profileImage"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:id="@+id/username"
                    android:drawablePadding="10dp"
                    android:gravity="start|center"
                    android:text="Adeel Aslam"
                    android:textSize="16sp"
                    android:fontFamily="@font/cantata_one"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_baseline_history_24"
                android:id="@+id/age"
                android:drawablePadding="10dp"
                android:gravity="start|center"
                android:text="21 Year"
                android:textSize="16sp"
                android:fontFamily="@font/cantata_one"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:drawableStart="@drawable/ic_baseline_pin_drop_24"
                android:id="@+id/city"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:gravity="start|center"
                android:text="Lahore"
                android:textSize="16sp"
                android:fontFamily="@font/cantata_one"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:id="@+id/email"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:gravity="start|center"
                android:text="abc@example.com"
                android:textSize="16sp"
                android:fontFamily="@font/cantata_one"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:id="@+id/phone"
                android:drawablePadding="10dp"
                android:gravity="start|center"
                android:text="+921234567890"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cantata_one"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableStart="@drawable/ic_baseline_people_24"
                android:id="@+id/team"
                android:drawablePadding="10dp"
                android:gravity="start|center"
                android:text="LQ"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cantata_one"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawableStart="@drawable/ic_baseline_wc_24"
                android:id="@+id/gender"
                android:drawablePadding="10dp"
                android:gravity="start|center"
                android:text="Male"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cantata_one"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="start|center"
                    android:text="Role: "
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/cantata_one"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/role"
                    android:gravity="start|center"
                    android:text="RHB"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/cantata_one"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="start|center"
                    android:text="Bat Hand: "
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/cantata_one"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/batHand"
                    android:gravity="start|center"
                    android:text="RHB"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/cantata_one"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="start|center"
                    android:text="Bat Style: "
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/cantata_one"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/batStyle"
                    android:gravity="start|center"
                    android:text="RHB"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/cantata_one"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="start|center"
                    android:text="Bowl Hand: "
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/cantata_one"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/bowlHand"
                    android:gravity="start|center"
                    android:text="RHB"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/cantata_one"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="start|center"
                    android:text="Bowl Style: "
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/cantata_one"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/bowlStyle"
                    android:gravity="start|center"
                    android:text="RHB"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/cantata_one"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/cantata_one"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:id="@+id/editBtn"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/penReqLayout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Team Pending Requests"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cantata_one"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/penReqRecyclerView"
            tools:listitem="@layout/pending_request_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Team Suggestions"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cantata_one"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teamSugRecyclerView"
            tools:listitem="@layout/team_suggestion_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>