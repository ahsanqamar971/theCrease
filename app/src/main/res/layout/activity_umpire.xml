<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UmpireRankingActivity">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/news_text_bg"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:fontFamily="@font/amiko"
                android:textSize="15sp"
                android:id="@+id/club"
                android:text="Club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:background="@drawable/news_text_bg"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:fontFamily="@font/amiko"
                android:textSize="15sp"
                android:id="@+id/uni"
                android:text="Universities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:fontFamily="@font/amiko"
                android:textSize="15sp"
                android:background="@drawable/news_text_bg"
                android:id="@+id/others"
                android:text="Others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="T20"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="18sp"
                android:fontFamily="@font/cantata_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/t20_recyclerView"
            tools:listitem="@layout/tranking_itemview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="T10"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:textSize="18sp"
                android:fontFamily="@font/cantata_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/t10_recyclerView"
            tools:listitem="@layout/tranking_itemview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="One Day"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:textSize="18sp"
                android:fontFamily="@font/cantata_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/oneDay_recyclerView"
            tools:listitem="@layout/tranking_itemview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Other"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="18sp"
                android:fontFamily="@font/cantata_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/other_recyclerView"
            tools:listitem="@layout/tranking_itemview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>