<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:id="@+id/signInBtn"
                android:text="Sign In"
                android:layout_gravity="start"
                android:gravity="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/cantata_one"
                android:background="@drawable/btn_bg"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/signUpBtn"
                android:text="Sign Up"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/cantata_one"
                android:background="@drawable/btn_bg"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/cardColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/teams"
                android:padding="5dp"
                android:gravity="start|center"
                android:drawablePadding="40dp"
                android:text="Teams"
                android:fontFamily="@font/cantata_one"
                android:textSize="18sp"
                android:drawableStart="@drawable/group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/players"
                android:padding="5dp"
                android:gravity="start|center"
                android:drawablePadding="40dp"
                android:text="Players"
                android:fontFamily="@font/cantata_one"
                android:textSize="18sp"
                android:drawableStart="@drawable/batsman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="5dp"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/rankings"
                android:padding="5dp"
                android:gravity="start|center"
                android:drawablePadding="40dp"
                android:text="Rankings"
                android:fontFamily="@font/cantata_one"
                android:textSize="18sp"
                android:drawableStart="@drawable/rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/cardColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fixtures"
                android:padding="5dp"
                android:gravity="start|center"
                android:drawablePadding="40dp"
                android:text="Fixtures"
                android:fontFamily="@font/cantata_one"
                android:textSize="18sp"
                android:drawableStart="@drawable/counting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="5dp"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tournaments"
                android:padding="5dp"
                android:gravity="start|center"
                android:drawablePadding="40dp"
                android:text="Tournaments"
                android:fontFamily="@font/cantata_one"
                android:textSize="18sp"
                android:drawableStart="@drawable/tournament"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/cardColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/contactus"
                    android:padding="5dp"
                    android:gravity="start|center"
                    android:drawablePadding="40dp"
                    android:text="Contact us"
                    android:fontFamily="@font/cantata_one"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="5dp"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/privacypolicy"
                    android:padding="5dp"
                    android:gravity="start|center"
                    android:drawablePadding="40dp"
                    android:text="Privacy Policy"
                    android:fontFamily="@font/cantata_one"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/insurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginTop="5dp"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/aboutus"
                    android:padding="5dp"
                    android:gravity="start|center"
                    android:drawablePadding="40dp"
                    android:text="About us"
                    android:fontFamily="@font/cantata_one"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/ic_action_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_margin="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/cardColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/settings"
                    android:padding="5dp"
                    android:gravity="start|center"
                    android:drawablePadding="40dp"
                    android:text="Settings"
                    android:fontFamily="@font/cantata_one"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>