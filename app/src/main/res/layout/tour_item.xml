<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/tournImage"
        android:layout_alignParentStart="true"
        android:src="@drawable/tourn"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/tournImage"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tournName"
        android:text="Pakistan Super League"
        android:fontFamily="@font/cantata_one"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tourTeams"
        android:text="8 teams"
        android:fontFamily="@font/amiko"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:background="@color/black"
        android:layout_alignBottom="@id/tournImage"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>