<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.UmpireSignUpActivity">

    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cantata_one"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="22sp"/>

        <TextView
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amiko"
            android:text="Hello"
            android:paddingEnd="10dp"
            android:id="@+id/nameTv"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <TextView
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="We appreciate your willingness to join our platform and make it big in cricket world."
            android:textSize="15sp"/>

        <TextView
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amiko"
            android:text="CRITERIA:"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Min 2 years of experience\nMin 2 hosted tournaments\nMax age limit 60 years"
            android:paddingEnd="10dp"
            android:textSize="15sp"/>

        <TextView
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Please add the following details to complete your registration."
            android:paddingEnd="10dp"
            android:textSize="15sp"/>

        <LinearLayout
            android:gravity="center"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cantata_one"
                android:text="Any 2 tournaments:\nyou officiated"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tour1"
                    android:hint="Tournament 1"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:inputType="textCapSentences"
                    android:background="@drawable/et_background" />
                <EditText
                    android:id="@+id/tour2"
                    android:hint="Tournament 2"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:inputType="textCapSentences"
                    android:background="@drawable/et_background" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cantata_one"
                android:text="MOBILE:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:layout_weight="0.5"
                android:id="@+id/number"
                android:hint="03xx-xxxxxxx"
                android:paddingStart="10dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:inputType="number"
                android:background="@drawable/et_background" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cantata_one"
                android:text="Education:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:layout_weight="0.5"
                android:id="@+id/eduET"
                android:hint="Enter here"
                android:paddingStart="10dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:inputType="textCapWords"
                android:background="@drawable/et_background" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="start|center"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cantata_one"
                android:text="Experience:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:weightSum="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/negCounter"
                    android:padding="5dp"
                    android:text="-"
                    android:textSize="35sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:fontFamily="@font/cantata_one"
                    android:gravity="center"
                    android:id="@+id/experienceET"
                    android:hint="2"
                    android:inputType="number"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/et_background" />
                <TextView
                    android:id="@+id/plusCounter"
                    android:padding="5dp"
                    android:text="+"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:padding="5dp"
                    android:text="years"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:id="@+id/backBtn"
                android:text="Back"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/cantata_one"
                android:background="@drawable/btn_bg"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/applyBtn"
                android:text="Apply"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/cantata_one"
                android:background="@drawable/btn_bg"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>