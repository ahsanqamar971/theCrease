<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <TextView
            android:layout_alignParentStart="true"
            android:id="@+id/proCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/cantata_one"
            android:gravity="center"
            android:text="Pakistan Super League"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/proMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_action_more" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg">

        <ImageView
            android:id="@+id/proImage"
            android:src="@drawable/dummy_image"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/proName"
                android:text="Kookaburra Pace Pro Bat"
                android:fontFamily="@font/cantata_one"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/proModel"
                android:text="Model: Rampage 4.0"
                android:textColor="@color/black"
                android:fontFamily="@font/cantata_one"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:layout_marginTop="5dp"
                    android:text="Quantity:"
                    android:textColor="@color/black"
                    android:fontFamily="@font/cantata_one"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="0.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/negCounter"
                        android:padding="5dp"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:fontFamily="@font/cantata_one"
                        android:gravity="center"
                        android:id="@+id/proQuantity"
                        android:text="1"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/et_background" />
                    <TextView
                        android:id="@+id/plusCounter"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:text="+"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>


            <View
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/proPrice"
                android:layout_marginTop="5dp"
                android:text="Price:"
                android:textColor="@color/black"
                android:fontFamily="@font/cantata_one"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>